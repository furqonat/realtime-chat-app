{
  "compilerOptions": {
    "jsx": "preserve",
    "lib": [
      "DOM.Iterable",
      "dom",
      "ESNext"
    ],
    "rootDir": "src",
    "module": "ESNext",
    "target": "ESNext",
    "sourceMap": true,
    "moduleResolution": "node",
    "noImplicitReturns": true,
    "allowSyntheticDefaultImports": true,
    "baseUrl": "src"
  },
  "include": [
    "src"
  ],
  "exclude": [
    "build"
  ],
  "references": [
    {
      "path": "./tsconfig.node.json"
    }
  ]
}