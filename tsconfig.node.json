{
    "compilerOptions": {
        "composite": true,
        "module": "ESNext",
        "moduleResolution": "Node",
        "allowSyntheticDefaultImports": true,
        "baseUrl": "./src",
        "paths": {
            "@/*": [
                "./src/*"
            ],
            "assets/*": [
                "./src/assets/*"
            ],
            "components/*": [
                "./src/components/*"
            ],
            "hooks/*": [
                "./src/hooks/*"
            ],
            "pages/*": [
                "./src/pages/*"
            ],
            "utils/*": [
                "./src/utils/*"
            ],
            "interfaces/*": [
                "./src/interfaces/*"
            ],
            "lib/*": [
                "./src/lib/*"
            ],
        },
    },
    "include": [
        "vite.config.ts"
    ]
}